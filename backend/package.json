    "drizzle-orm": "^0.31.1",
    "drizzle-zod": "^0.5.1",
    "handlebars": "^4.7.8",
    "hono": "^4.4.4",
    "nodemailer": "^6.9.13",
    "postgres": "^3.4.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "^1.1.5",
    "drizzle-kit": "^0.22.7",
    "esbuild": "^0.21.4"
